<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00E9FF"
    android:padding="50px"
    tools:context=".MainActivity"
    tools:ignore="MissingDefaultResource">

    <!-- activity_main.xml -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="19dp"
        android:background="#00E9FF"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Espacio en el borde izquierdo -->
        <Space
            android:layout_width="16dp"
            android:layout_height="match_parent" />

        <!-- Panel izquierdo: Configuración del juego -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#20000000"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Título del juego -->
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Tres_en_raya"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <!-- Botón de 1 jugador -->
            <Button
                android:id="@+id/btn_1_jugador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 jugador" />

            <!-- Niveles de dificultad -->
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radio_facil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fácil" />

                <RadioButton
                    android:id="@+id/radio_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Normal" />

                <RadioButton
                    android:id="@+id/radio_imposible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Imposible" />
            </RadioGroup>

            <!-- Botón de 2 jugadores -->
            <Button
                android:id="@+id/btn_2_jugadores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="2 jugadores" />
        </LinearLayout>

        <!-- Espacio entre los dos paneles -->
        <Space
            android:layout_width="16dp"
            android:layout_height="match_parent" />

        <!-- Panel derecho: GridLayout del juego (3x3) -->
        <GridLayout
            android:id="@+id/grid_layout"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_margin="16dp"
            android:background="#20000000"
            android:columnCount="3"
            android:padding="16dp"
            android:rowCount="3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/button1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="4dp"
                android:background="@android:drawable/ic_delete"
                android:text=""
                android:textSize="24sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="4dp"
                android:background="@android:drawable/ic_delete"
                android:text=""
                android:textSize="24sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="4dp"
                android:background="@android:drawable/ic_delete"
                android:text=""
                android:textSize="24sp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="4dp"
                android:background="@android:drawable/ic_delete"
                android:text=""
                android:textSize="24sp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="4dp"
                android:background="@android:drawable/ic_delete"
                android:text=""
                android:textSize="24sp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="4dp"
                android:background="@android:drawable/ic_delete"
                android:text=""
                android:textSize="24sp" />

            <Button
                android:id="@+id/button7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="4dp"
                android:background="@android:drawable/ic_delete"
                android:text=""
                android:textSize="24sp" />

            <Button
                android:id="@+id/button8"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="4dp"
                android:background="@android:drawable/ic_delete"
                android:text=""
                android:textSize="24sp" />

            <Button
                android:id="@+id/button9"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="4dp"
                android:background="@android:drawable/ic_delete"
                android:text=""
                android:textSize="24sp" />
        </GridLayout>

        <!-- Espacio en el borde derecho -->
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>